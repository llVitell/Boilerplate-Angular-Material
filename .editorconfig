# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
end_of_line = lf
quote_type = single
trim_trailing_whitespace = true

[*.ts]
ij_typescript_use_double_quotes = false

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.html]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
